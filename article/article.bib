@inproceedings{morabito2025a,
  title = {A {{Generative AI-Enhanced Digital Twin Framework}} for {{Heterogeneous Networks}} and {{Smart Environments}}},
  booktitle = {{{IEEE INFOCOM}} 2025 - {{IEEE Conference}} on {{Computer Communications Workshops}} ({{INFOCOM WKSHPS}})},
  author = {Morabito, Roberto and Pandey, Bivek and Daubaris, Paulius and Wanigarathna, Yasith R. and Tarkoma, Sasu},
