@inproceedings{diorio2025a,
  title = {{{AI-Enhanced Process Digital Twins}} for {{Circular Manufacturing}}: {{Design}}, {{Architecture}}, and {{Deployment}}},
  shorttitle = {{{AI-Enhanced Process Digital Twins}} for {{Circular Manufacturing}}},
  booktitle = {2025 21st {{International Conference}} on {{Distributed Computing}} in {{Smart Systems}} and the {{Internet}} of {{Things}} ({{DCOSS-IoT}})},
