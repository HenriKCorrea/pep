 @article{Sarp_Kuzlu_Jovanovic_Polat_Guler_2024,
  title        = {Digitalization of railway transportation through AI-powered services: digital twin trains},
  volume       = {16},
  issn         = {1866-8887},
  url          = {https://doi.org/10.1186/s12544-024-00679-5},
